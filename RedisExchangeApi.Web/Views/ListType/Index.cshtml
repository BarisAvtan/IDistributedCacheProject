@model List<string>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="ListType" asp-action="DeleteFirstItem">Listenin Başından Sil</a>

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaydet</button>
</form>

@foreach (var name in Model)
{
    <h2>@name <a asp-controller="ListType" asp-action="DeleteItem" asp-route-name="@name">Sil</a></h2>
}